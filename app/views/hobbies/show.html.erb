<h2><%=@hobby.title%> </h2>

<% if @hobby.projects.empty?%>
    <%= link_to 'Delete Hobby', hobby_path(@hobby), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
<% end%>

<br><br>

<table class="centered highlight">
        <thead>
          <tr>
              <th>Project</th>
              <th>Description</th>              
              <th>Owner</th>
          </tr>
        </thead>
<%# link_to hobby.title, hobby, class: "black-text"%>





                        <% @hobby.projects.each do |project| %>


        <tbody>
          <tr>
            <td><%= link_to project.title, project, class: "black-text"%></td>
            <td><%= project.description%></td>
            <td><%= link_to project.user.username, project.user, class: "black-text"%></td>
          </tr>
          
        </tbody>

                               
                                    
                                <% end %>   
                             

                                

</table>

