<h1>Welcome! Create an account:</h1>
  <div class="row ">
        <div class="container">
        <div class="container">



<%= form_for @user, url: '/signup', html: {class: "validate"} do |f|%>
    <%= f.label :username%>
    <%= f.text_field :username%>
    <br>
    
    <%= f.label :bio%>
    <%= f.text_area :bio%>
    <br>

    <%= f.label :password%>
    <%= f.password_field :password%>
    <%= flash[:notice]%> <br> <br>

    <br><br>
    <%= f.submit%>

<%end%>
<br><br>
<%= link_to('Sign up with Facebook!', '/auth/facebook') %>
    </div>
    </div>
</div>